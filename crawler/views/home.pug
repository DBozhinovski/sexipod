doctype html

html
    head
        title Sexipod Crawler

        link(rel='stylesheet', href='/css/main.css')
    body
        h2 Sexipod <small><i> crawler </i></small>
        hr
        form(method="POST", action="/")
            p Enter an URL: 
                input(type="text", name="url")
